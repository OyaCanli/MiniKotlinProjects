<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransformsActivity">

    <ImageView
        android:id="@+id/tour_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/maiden_tower"
        android:transitionName="imageTransformPage"/>

    <Button
        android:id="@+id/scale_transform_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale transform"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tour_image"/>

    <Button
        android:id="@+id/scale_type_transform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale type transform"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scale_transform_btn"/>

    <Button
        android:id="@+id/clip_bounds_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Clip bounds transform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scale_type_transform" />
</androidx.constraintlayout.widget.ConstraintLayout>