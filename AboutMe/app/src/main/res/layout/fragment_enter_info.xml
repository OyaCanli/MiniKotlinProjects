<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data class="EnterInfoBinding"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_input_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_margin="@dimen/margin_stardard"
                app:layout_constraintHorizontal_bias="0.187" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/step_info_tv"/>

        <Button
                android:text="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_btn" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/user_input_et" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                style="@style/Base.Widget.AppCompat.Button.Colored" android:fontFamily="@font/roboto"/>

        <TextView
                android:text="@string/enter_your_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/step_info_tv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_margin="@dimen/margin_stardard" android:fontFamily="@font/roboto"/>


    </android.support.constraint.ConstraintLayout>

</layout>