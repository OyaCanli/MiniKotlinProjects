<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="EnterInfoBinding"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_input_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_stardard"
                app:layout_constraintHorizontal_bias="0.187"
                app:layout_constraintTop_toBottomOf="@+id/step_info_tv"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_gallery"
                android:id="@+id/pick_image"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_stardard"
                app:layout_constraintTop_toBottomOf="@+id/step_info_tv"/>

        <Button
                android:text="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/margin_stardard"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toBottomOf="@id/barrier2"/>

        <TextView
                android:text="@string/enter_your_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/step_info_tv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_stardard"
                android:fontFamily="@font/roboto"/>

        <com.layer_net.stepindicator.StepIndicator
                android:id="@+id/step_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:siBackgroundColor="@color/colorPrimary"
                app:siStepColor="@color/colorAccent"
                app:siStepCount="5"
                app:layout_constraintTop_toBottomOf="@+id/done_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.2"/>

        <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/barrier2" app:barrierDirection="bottom"
                                            app:constraint_referenced_ids="pick_image,user_input_et"
                                            tools:layout_editor_absoluteY="511dp"/>

    </android.support.constraint.ConstraintLayout>

</layout>