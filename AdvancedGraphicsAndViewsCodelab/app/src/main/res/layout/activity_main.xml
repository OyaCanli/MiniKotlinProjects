<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/openFanController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_fan_controller"
        app:layout_constraintBottom_toTopOf="@+id/openCanvasEx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openCanvasEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_canvas_example"
        app:layout_constraintBottom_toTopOf="@id/openFreeWriting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openFanController" />

    <Button
        android:id="@+id/openFreeWriting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_free_writing"
        app:layout_constraintBottom_toTopOf="@id/openClipPath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openCanvasEx" />

    <Button
        android:id="@+id/openClipPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_clip_path"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openFreeWriting" />
</androidx.constraintlayout.widget.ConstraintLayout>