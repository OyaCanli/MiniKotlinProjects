<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.canlioya.customviewexercise.diagonallayout.DiagonalLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".diagonallayout.DiagonalLayoutActivity">

        <com.canlioya.customviewexercise.donut.PizzaView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="8dp"
            app:num_pieces="8"
            app:pizza_color="@color/colorPrimaryDark" />

        <com.canlioya.customviewexercise.donut.PizzaView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="8dp"
            app:stroke_width="10dp" />

        <com.canlioya.customviewexercise.donut.PizzaView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="8dp"
            app:num_pieces="4"
            app:pizza_color="@android:color/holo_blue_bright" />

        <com.canlioya.customviewexercise.donut.PizzaView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="8dp"
            app:num_pieces="4"
            app:pizza_color="@android:color/holo_orange_dark"
            app:stroke_width="8dp" />

    </com.canlioya.customviewexercise.diagonallayout.DiagonalLayout>

</androidx.constraintlayout.widget.ConstraintLayout>